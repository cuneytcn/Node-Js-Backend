<div class="card mb-3">
	<div class="row">
		<div class="col-md-4">
			<div class="ratio ratio-4x3">
				<img class="img-fluid rounded-start" src="/static/images/<%= img %>" alt="<%= title %>" />
			</div>
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h4 class="card-title mb-3">
					<a href="/blog/<%= blog_id %>"><%= title %></a>
				</h4>
				<p class="card-text"><%= content %></p>
			</div>
		</div>
	</div>
</div>
